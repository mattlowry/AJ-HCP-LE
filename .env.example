# Environment variables for AJ Long Electric FSM
# Copy this file to .env and fill in the actual values

# Django settings
SECRET_KEY=your-super-secret-key-here
DEBUG=False
ALLOWED_HOSTS=aj-long-electric.com,www.aj-long-electric.com

# Database
DB_PASSWORD=your-postgres-password
POSTGRES_DB=fsm_db
POSTGRES_USER=fsm_user
DB_HOST=postgres
DB_PORT=5432

# Redis
REDIS_URL=redis://redis:6379/0

# Email configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@aj-long-electric.com
ADMIN_EMAIL=admin@aj-long-electric.com

# Google Maps
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Monitoring
GRAFANA_PASSWORD=your-grafana-password

# Cloud storage (optional)
AWS_S3_BUCKET=your-backup-bucket

# Notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
EMAIL_RECIPIENT=alerts@aj-long-electric.com

# SSL certificates (paths in container)
SSL_CERT_PATH=/etc/ssl/certs/aj-long-electric.crt
SSL_KEY_PATH=/etc/ssl/private/aj-long-electric.key