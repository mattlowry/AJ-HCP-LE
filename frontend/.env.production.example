# Production Environment Variables for AJ Long Electric FSM
# Set these environment variables in your Render deployment settings

# =============================================================================
# API CONFIGURATION (REQUIRED)
# =============================================================================
# Production API URL - Set this to your backend server URL
REACT_APP_API_URL=https://aj-long-electric-backend.onrender.com/api

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
REACT_APP_ENVIRONMENT=production
REACT_APP_DEBUG_MODE=false

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Disable source maps in production for security
GENERATE_SOURCEMAP=false

# =============================================================================
# PWA SETTINGS
# =============================================================================
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_SERVICE_WORKER=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_GEOLOCATION=true
REACT_APP_ENABLE_OFFLINE_MODE=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Disable dev tools in production
REACT_APP_ENABLE_DEVTOOLS=false

# =============================================================================
# API INTEGRATION (OPTIONAL)
# =============================================================================
# If you have these services configured, add the public keys
# REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-key
# REACT_APP_GOOGLE_MAPS_API_KEY=your-production-maps-key
# REACT_APP_MAPBOX_TOKEN=pk.your-production-mapbox-token