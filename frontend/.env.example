# Frontend Environment Variables Template for AJ Long Electric FSM
# Copy this file to .env and fill in the actual values
# Frontend .env files can be committed (they're public in the browser)
# NEVER put sensitive information like secret keys here

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Development API URL
REACT_APP_API_URL=http://localhost:8000/api

# Production API URL (update for your domain)
# REACT_APP_API_URL=https://your-domain.com/api

# =============================================================================
# STRIPE CONFIGURATION (PUBLIC KEYS ONLY)
# =============================================================================
# Stripe publishable key (safe to expose)
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# =============================================================================
# MAP/LOCATION SERVICES
# =============================================================================
# Mapbox token (public token, restricted by domain)
REACT_APP_MAPBOX_TOKEN=pk.your-mapbox-token

# Google Maps API key (public key, restricted by domain)
# REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics tracking ID
# REACT_APP_GA_TRACKING_ID=GA-XXXXXXXXX

# Sentry DSN for error tracking
# REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# FEATURE FLAGS
# =============================================================================
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_GEOLOCATION=true
REACT_APP_ENABLE_OFFLINE_MODE=false

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
# Development, staging, or production
REACT_APP_ENVIRONMENT=development

# Enable debug mode (shows additional UI elements)
REACT_APP_DEBUG_MODE=false

# =============================================================================
# PWA SETTINGS
# =============================================================================
# Enable Progressive Web App features
REACT_APP_ENABLE_PWA=true

# Enable service worker for offline functionality
REACT_APP_ENABLE_SERVICE_WORKER=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable React DevTools in production (false for production)
REACT_APP_ENABLE_DEVTOOLS=true

# Enable hot module replacement
FAST_REFRESH=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Enable HTTPS redirect in development
# HTTPS=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Bundle analyzer (set to true to analyze bundle size)
ANALYZE=false

# Source maps in production (false for security)
GENERATE_SOURCEMAP=false